<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.SpartanTech.schedule"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.SpartanTech.schedule.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.SpartanTech.schedule.AssignmentActivity"
            android:label="@string/title_activity_assignment" >
        </activity>


        <receiver
            android:name="com.SpartanTech.schedule.AlarmReceiver"
            android:enabled="true"
            android:exported="true" >
        </receiver>
        
        <activity
            android:name="com.SpartanTech.schedule.DueAssignmentActvity"
            android:label="@string/title_activity_due_assignment_actvity" >
        </activity>
        
         <activity
            android:name="com.SpartanTech.schedule.SettingsActivity"
            android:label="@string/title_activity_SettingsActivity" >
        </activity>
    </application>

</manifest>